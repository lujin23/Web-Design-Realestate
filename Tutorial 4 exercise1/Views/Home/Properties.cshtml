@{
    ViewData["Title"] = "Properties Page";

}
<h1>@ViewData["Title"]</h1>
<div style="display: flex; justify-content: space-between; padding: 20px;">
    <!-- Buyers Section -->
    <div style="width: 45%; text-align: left; border: 1px solid #ccc; padding: 15px; border-radius: 5px;">
        <h2>Buyers</h2>
        <p>Explore available properties and find your dream home.</p>
    </div>

    <!-- Sellers Section -->
    <div style="width: 45%; text-align: right; border: 1px solid #ccc; padding: 15px; border-radius: 5px;">
        <h2>Sellers</h2>
        <p>List your properties and connect with potential buyers.</p>
    </div>
</div>
